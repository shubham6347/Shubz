pipeline {
    agent any

    stages {
        stage('CI') {
            steps {
                // Checkout code from GitHub
                git 'https://github.com/your/repository.git'
                
                // Build Docker image
                sh 'docker build -t your-image-name .'
                
                // Push image to Docker Hub
                withCredentials([usernamePassword(credentialsId: 'your-dockerhub-credentials-id', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                    sh 'docker push your-image-name'
                }
            }
        }
        stage('CD') {
            steps {
                // Pull latest image from Docker Hub
                sh 'docker pull your-image-name'
                
                // Deploy to Kubernetes (using kubectl or Helm)
                // Example using kubectl
                sh 'kubectl apply -f your-kubernetes-manifest.yaml'
            }
        }
    }
}
